{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "node",
      "outDir": "build",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "declaration": true,
      "skipLibCheck": true
    },
    "ts-node": {
      "esm": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build"]
  }